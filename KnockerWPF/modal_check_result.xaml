<Window x:Name="window_details" x:Class="KnockerWPF.modal_check_result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnockerWPF"
        mc:Ignorable="d"
        Title="Knock details" Height="257" Width="341.5" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True" BorderThickness="2" WindowStyle="None" BorderBrush="Black">
    <Grid>
        <ScrollViewer Margin="10,10,10,36" BorderBrush="Black" BorderThickness="1">
            <TextBlock x:Name="txt_details" TextWrapping="WrapWithOverflow" Background="#FFFBFFA5" FontSize="12" FontFamily="Courier New" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>
        <Button x:Name="btn_close" Content="Close" HorizontalAlignment="Left" Margin="133,0,0,8" VerticalAlignment="Bottom" Width="75" IsCancel="True" FontFamily="Arial Narrow" FontSize="14"/>

    </Grid>
</Window>
